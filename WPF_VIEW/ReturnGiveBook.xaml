<Window x:Class="WPF_VIEW.ReturnGiveBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_VIEW"
        mc:Ignorable="d"
        Title="Управление книгами читателя" 
        Height="600" 
        Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 

                Padding="10" 
                Margin="0,0,0,10"
                CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Читатель:" 
                           FontWeight="Bold"
                           FontSize="14"/>

                <StackPanel Grid.Column="1" 
                            Margin="10,0">
                    <TextBlock x:Name="ReaderNameText" 
                               Text="{Binding SelectedReader.Name}"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="ReaderInfoText" 
                               Text="Адрес:" 
                               Foreground="Gray"/>
                    <TextBlock x:Name="ReaderAddress" 
                                Text="{Binding SelectedReader.Address}"
                                FontSize="16"
                                FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="10"
                            CornerRadius="5,5,0,0">
                        <TextBlock Text="Книги у читателя" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <ListView Grid.Row="1" 
                              x:Name="ReaderBooksListView"
                              ItemsSource="{Binding ReadersBooks}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" 
                                                       TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Автор" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Author}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Жанр" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Genre}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="10"
                            CornerRadius="0,0,5,5">
                        <Button x:Name="ReturnBookButton" 
                                Content="Вернуть книгу"
                                Background="Gray"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Command="{Binding ReturnBookCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedItem, ElementName=ReaderBooksListView}" 
                                                     Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="Transparent"/>
            
            <Border Grid.Column="2" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="10"
                            CornerRadius="5,5,0,0">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Доступные книги" 
                                       FontWeight="Bold"/>
                            <TextBlock x:Name="AvailableBooksCountText" 
                                       Text=" (15)" 
                                       Foreground="Gray"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <ListView Grid.Row="1" 
                              x:Name="AvailableBooksListView"
                              ItemsSource="{Binding AvailableBooks}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Название" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" 
                                                       TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Автор" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Author}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="10"
                            CornerRadius="0,0,5,5">
                        <Button x:Name="TakeBookButton" 
                                Content="Взять книгу"
                                Background="Gray"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Command="{Binding GiveBookCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="IsEnabled" Value="True"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedAvailableBook, ElementName=AvailableBooksListView}" 
                                                     Value="{x:Null}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Padding="10"
                Margin="0,10,0,0"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="RefreshButton" 
                        Content="Обновить"
                        Background="#607D8B"
                        Foreground="White"
                        ToolTip="Обновить списки книг"/>
                        

                <Button x:Name="CloseButton" 
                        Content="Закрыть"
                        Margin="20,0,0,0"
                        Background="Gray"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
