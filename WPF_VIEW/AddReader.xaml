<Window x:Class="WPF_VIEW.AddReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_VIEW"
        mc:Ignorable="d"
        Title="AddReader" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
   

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <GroupBox Header="Добавить читателя" Margin="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ФИО Читателя: " VerticalAlignment="Center" Margin="10"/>
                    <TextBox Width="200"  Margin="5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Адрес читателя: " VerticalAlignment="Center" Margin="10"/>
                    <TextBox Width="200" Margin="5" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Добавить читателя" Command="{Binding SaveCommand}" Margin="10" Padding="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
